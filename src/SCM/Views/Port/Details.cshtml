@model SCM.Models.ViewModels.PortViewModel

@{
    ViewData["Title"] = "Details";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Device/GetAll">Devices</a></li>
    <li class="breadcrumb-item"><a href="/Port/GetAllByDeviceID/@Model.DeviceID">Ports - [@ViewBag.Device.Name]</a></li>
    <li class="breadcrumb-item active">Details - [@Model.Type Model.Name]</li>
</ol>

<h2>Details for Port '@Model.Type @Model.Name'</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PortBandwidth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PortBandwidth.BandwidthGbps)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Device)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Device.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tenant)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tenant.Name)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    <a asp-action="GetAllByDeviceID" asp-route-id = "@Model.DeviceID">Back to Ports List</a>
</div>
