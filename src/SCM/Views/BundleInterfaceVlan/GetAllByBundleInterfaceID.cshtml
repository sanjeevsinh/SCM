@model IEnumerable<SCM.Models.ViewModels.BundleInterfaceVlanViewModel>

@{
    ViewData["Title"] = "GetByBundleInterfaceID";
}

<h2>Vlans for bundle interface @ViewBag.BundleInterface.Name</h2>
<p>
    <a asp-action="Create" asp-route-id="@ViewBag.BundleInterface.BundleInterfaceID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VlanTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLayer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubnetMask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vrf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VlanTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLayer3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubnetMask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vrf.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BundleInterfaceVlanID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BundleInterfaceVlanID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BundleInterfaceVlanID })
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-controller="BundleInterface" asp-action="GetAllByDeviceID" asp-route-id="@ViewBag.BundleInterface.DeviceID">Back to Bundle Interfaces List</a>
