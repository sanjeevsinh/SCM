@model SCM.Models.ViewModels.BundleInterfacePortViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (@ViewData["ConcurrencyErrorMessage"] != null)
{
<div class="alert alert-danger">@ViewData["ConcurrencyErrorMessage"]</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BundleInterface)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BundleInterface.ID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Port.Type)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Port.Type)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Port.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Port.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BundleInterfacePortID" />
        <input type="hidden" asp-for="BundleInterfaceID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="GetAllByBundleInterfaceID" asp-route-id="@ViewBag.BundleInterface.BundleInterfaceID">Back to Ports</a>
        </div>
    </form>
</div>
