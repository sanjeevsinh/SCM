@model IEnumerable<SCM.Models.ViewModels.BundleInterfacePortViewModel>

@{
    ViewData["Title"] = "Bundle Ports";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/Attachment/GetAllByTenantID/@ViewBag.Attachment.TenantID">Attachments</a></li>
    <li class="breadcrumb-item active">Bundle Ports</li>
</ol>

<h2>Ports for Bundle '@ViewBag.Attachment.Name'</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortName)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortName)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="GetAllByTenantID" asp-route-id="@Context.Request.Query["tenantID"]">Back to Attachments</a>
</div>