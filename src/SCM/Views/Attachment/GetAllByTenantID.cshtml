@model IEnumerable<SCM.Models.ViewModels.AttachmentViewModel>

@{
    ViewData["Title"] = "Attachments";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item active">Attachments</li>
</ol>

<h2>Attachments for Tenant '@ViewBag.Tenant.Name'</h2>

<p>
    <a asp-action="Create" asp-route-id="@ViewBag.Tenant.TenantID" asp-route-tenantID="@ViewBag.Tenant.TenantID">Create New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBundle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTagged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Device)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vrf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bandwidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractBandwidthPool)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresSync)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsBundle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsTagged)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location.SiteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Device.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vrf.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bandwidth.BandwidthGbps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractBandwidthPool.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiresSync)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID, tenantID = item.TenantID }) |
                    @Html.ActionLink("Delete", "Delete", new { ID = item.ID, tenantID = item.TenantID })
                    @if (item.IsBundle)
                    {
                        <span>|</span> @Html.ActionLink("Bundle Member Ports", "GetBundleInterfaceMemberPorts", new { ID = item.ID, tenantID= item.TenantID })
                    }
                    @if (item.IsLayer3)
                    {
                        <span>|</span> @Html.ActionLink("BGP Peers", "GetAllByVrfID", "BgpPeer", new { ID = item.Vrf.VrfID, tenantID = item.TenantID })
                    }
                    @if (item.IsTagged)
                    {
                        <span>|</span> @Html.ActionLink("VIFs", "GetAllByAttachmentID", "Vif", new { ID = item.ID, tenantID = item.TenantID })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Tenant" asp-action="GetAll">Back to Tenants</a>
</div>