@model SCM.Models.ViewModels.VrfViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (@ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@Html.Raw(ViewData["ErrorMessage"])</div>
}


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>VRF</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AdministratorSubField)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdministratorSubField)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssignedNumberSubField)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssignedNumberSubField)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VrfID" />
        <input type="hidden" asp-for="DeviceID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            @if (ViewContext.HttpContext.Request.Query["tenantContext"] == "True")
            {
                <input type="submit" value="Delete" asp-route-tenantContext="True" class="btn btn-default" /> <span>|</span>
                <a asp-action="GetAllByTenantID" asp-route-id="@Model.TenantID">Back to Tenant VRFs</a>
            }
            else if (ViewContext.HttpContext.Request.Query["deviceContext"] == "True")
            {
                <input type="submit" value="Delete" asp-route-deviceContext="True" class="btn btn-default" /> <span>|</span>
                <a asp-action="GetAllByDeviceID" asp-route-id="@Model.DeviceID">Back to Device VRFs</a>
            }
        </div>
    </form>
</div>
