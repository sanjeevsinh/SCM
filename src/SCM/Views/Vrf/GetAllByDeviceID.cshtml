@model IEnumerable<SCM.Models.ViewModels.VrfViewModel>

@{
    ViewData["Title"] = "GetAllByDeviceID";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Device/GetAll">Devices</a></li>
    <li class="breadcrumb-item active">Device VRFs</li>
</ol>

<h2>VRFs for @ViewBag.Device.Name</h2>

<p>
    <a asp-action="CreateForDevice" asp-route-id="@ViewBag.Device.ID"  >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdministratorSubField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedNumberSubField)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tenant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdministratorSubField)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedNumberSubField)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tenant.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VrfID, deviceContext = true }) |
                @Html.ActionLink("Details", "Details", new { id = item.VrfID, deviceContext = true }) |
                @Html.ActionLink("Delete", "Delete", new { id= item.VrfID, deviceContext = true }) |
                @Html.ActionLink("BGP Peers", "GetAllByVrfID", "BgpPeer", new { id = item.VrfID, deviceContext = true })
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Device" asp-action="GetAll">Back to Devices List</a>
</div>
