@model SCM.Models.ViewModels.VrfViewModel

@{
    ViewData["Title"] = "CreateForDevice";
}

<h2>Create VRF for Device @ViewBag.Device.Name</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="DeviceID" value="@ViewBag.Device.ID" />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AdministratorSubField" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AdministratorSubField" class="form-control" />
                <span asp-validation-for="AdministratorSubField" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignedNumberSubField" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AssignedNumberSubField" class="form-control" />
                <span asp-validation-for="AssignedNumberSubField" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Tenant" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantID" class="form-control" asp-items="ViewBag.TenantID">
                    <option value="">-- Select a Tenant --</option>
                </select>
                <span asp-validation-for="TenantID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByDeviceID" asp-route-id="@ViewBag.Device.ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
