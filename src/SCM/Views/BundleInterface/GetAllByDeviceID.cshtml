@model IEnumerable<SCM.Models.ViewModels.BundleInterfaceViewModel>

@{
    ViewData["Title"] = "GetAllByDeviceID";
}

<h2>Bundle interfaces for device @ViewBag.Device.Name</h2>
<p>
    <a asp-action="Create" asp-route-id="@ViewBag.Device.ID">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTagged)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLayer3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubnetMask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterfaceBandwidth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vrf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTagged)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLayer3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IpAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubnetMask)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InterfaceBandwidth.BandwidthKbps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vrf.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BundleInterfaceID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BundleInterfaceID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BundleInterfaceID }) |
                @Html.ActionLink("Ports", actionName: "GetAllByBundleInterfaceID", controllerName: "BundleInterfacePort", routeValues: new { id = item.BundleInterfaceID }) |
                @Html.ActionLink("Vlans", actionName: "GetAllByBundleInterfaceID", controllerName: "BundleInterfaceVlan", routeValues: new { id = item.BundleInterfaceID})
            </td>
        </tr>
        }
    </tbody>
</table>
<a asp-controller="Device" asp-action="GetAll">Back to Devices</a>
