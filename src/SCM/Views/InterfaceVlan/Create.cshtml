@model SCM.Models.ViewModels.InterfaceVlanViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Vlan</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="InterfaceID" value="@ViewBag.Interface.ID" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsLayer3" />
                    <label asp-for="IsLayer3"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VlanTag" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="VlanTag" class="form-control" />
                <span asp-validation-for="VlanTag" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IpAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IpAddress" class="form-control" />
                <span asp-validation-for="IpAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SubnetMask" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SubnetMask" class="form-control" />
                <span asp-validation-for="SubnetMask" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Vrf" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="VrfID" class="form-control" asp-items="ViewBag.VrfID">
                    <option value="">-- Select a VRF --</option>
                </select>
                <span asp-validation-for="VrfID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByInterfaceID" asp-route-id="@ViewBag.Interface.ID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
