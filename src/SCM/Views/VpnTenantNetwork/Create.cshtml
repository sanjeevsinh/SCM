@model SCM.Models.ViewModels.VpnTenantNetworkViewModel

@{
    ViewData["Title"] = "Create";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Vpn/GetAll">VPNs</a></li>
    <li class="breadcrumb-item"><a href="/VpnAttachmentSet/GetAllByVpnID/@ViewBag.VpnAttachmentSet.Vpn.VpnID">VPN Attachment Sets - [@ViewBag.VpnAttachmentSet.Vpn.Name]</a></li>
    <li class="breadcrumb-item"><a href="/VpnTenantNetwork/GetAllByVpnAttachmentSetID/@ViewBag.VpnAttachmentSet.VpnAttachmentSetID">VPN Tenant Networks - [@ViewBag.VpnAttachmentSet.AttachmentSet.Tenant.Name]</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>

<h2>Add a Tenant Network to VPN '@ViewBag.VpnAttachmentSet.Vpn.Name'</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="VpnAttachmentSetID" value="@ViewBag.VpnAttachmentSet.VpnAttachmentSetID" />
        <div class="form-group">
            <label asp-for="TenantNetwork" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TenantNetworkID" class="form-control" asp-items="ViewBag.TenantNetworkID">
                    <option value="">-- Select Tenant Network --</option>
                </select>
                <span asp-validation-for="TenantNetworkID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByVpnAttachmentSetID" asp-route-id="@ViewBag.VpnAttachmentSet.VpnAttachmentSetID" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
