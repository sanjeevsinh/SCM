@model SCM.Models.ViewModels.VpnTenantNetworkViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Remove</h2>

@if (@ViewData["ConcurrencyErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ConcurrencyErrorMessage"]</div>
}


<h3>Are you sure you want to remove this Tenant Network from the VPN?</h3>
<div>
    <h4>Tenant Network</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TenantNetwork.IpPrefix)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenantNetwork.IpPrefix)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TenantNetwork.Length)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenantNetwork.Length)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VpnTenantNetworkID" />
        <input type="hidden" asp-for="VpnAttachmentSetID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <input type="submit" value="Remove" class="btn btn-default" /> |
            <a asp-action="GetAllByVpnAttachmentSetID" asp-route-id="@Model.VpnAttachmentSetID">Back to List</a>
        </div>
    </form>
</div>
