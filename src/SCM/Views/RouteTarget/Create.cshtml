@model SCM.Models.ViewModels.RouteTargetViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Route Target for VPN @ViewBag.Vpn.Name</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Route Target</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="VpnID" value="@ViewBag.Vpn.VpnID" />
        <div class="form-group">
            <label asp-for="AdministratorSubField" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AdministratorSubField" class="form-control" />
                <span asp-validation-for="AdministratorSubField" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignedNumberSubField" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AssignedNumberSubField" class="form-control" />
                <span asp-validation-for="AssignedNumberSubField" class="text-danger" />
            </div>
        </div>
@if (ViewBag.Vpn.VpnTopologyType.TopologyType == "Hub-and-Spoke")
{
        <div class="form-group">
            <label asp-for="IsHubExport" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsHubExport" class="form-control" />
                <span asp-validation-for="IsHubExport" class="text-danger"></span>
            </div>
        </div>
}
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByVpnID" asp-route-id="@ViewBag.Vpn.VpnID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
