@model SCM.Models.ViewModels.RouteTargetViewModel

@{
    ViewData["Title"] = "Delete";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Vpn/GetAll">VPNs</a></li>
    <li class="breadcrumb-item"><a href="/RouteTarget/GetAllByVpnID/@Model.VpnID">Route Targets</a></li>
    <li class="breadcrumb-item active">Delete</li>
</ol>

<h2>Delete</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@Html.Raw(ViewData["ErrorMessage"])</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AdministratorSubField)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdministratorSubField)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AssignedNumberSubField)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AssignedNumberSubField)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RouteTargetID" />
        <input type="hidden" asp-for="VpnID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" asp-route-tenantID="@Context.Request.Query["tenantID"]" class="btn btn-default" /> |
            <a asp-action="GetAllByVpnID" asp-route-id ="@Model.VpnID" asp-route-tenantID="@Context.Request.Query["tenantID"]">Back to List</a>
        </div>
    </form>
</div>
