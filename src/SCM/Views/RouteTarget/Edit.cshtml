@model SCM.Models.ViewModels.RouteTargetViewModel

@{
    ViewData["Title"] = "Edit";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Vpn/GetAll">VPNs</a></li>
    <li class="breadcrumb-item"><a href="/RouteTarget/GetAllByVpnID/@Model.VpnID">Route Targets</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="RouteTargetID" />
        <input type="hidden" asp-for="VpnID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-group">
            <label asp-for="AdministratorSubField" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AdministratorSubField" class="form-control" />
                <span asp-validation-for="AdministratorSubField" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AssignedNumberSubField" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AssignedNumberSubField" class="form-control" />
                <span asp-validation-for="AssignedNumberSubField" class="text-danger"></span>
            </div>
        </div>
@if (ViewBag.Vpn.VpnTopologyType.TopologyType == "Hub-and-Spoke")
{
        <div class="form-group">
            <label asp-for="IsHubExport" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsHubExport" class="form-control" />
                <span asp-validation-for="IsHubExport" class="text-danger"></span>
            </div>
        </div>
}
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" asp-route-tenantID="@Context.Request.Query["tenantID"]" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="GetAllByVpnID" asp-route-id ="@Model.VpnID" asp-route-tenantID="@Context.Request.Query["tenantID"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
