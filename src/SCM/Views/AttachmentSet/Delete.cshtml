@model SCM.Models.ViewModels.AttachmentSetViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (@ViewData["ErrorMessage"] != null)
{
<div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AttachmentSetID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" asp-route-tenantID = "@Context.Request.Query["tenantID"]" class="btn btn-default" /> |
            <a asp-action="GetAllByTenantID" asp-route-id="@Context.Request.Query["tenantID"]">Back to List</a>
        </div>
    </form>
</div>
