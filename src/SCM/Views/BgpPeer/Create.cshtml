@model SCM.Models.ViewModels.BgpPeerViewModel

@{
    ViewData["Title"] = "Create";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
    <li class="breadcrumb-item"><a href="/Tenant/GetAll">Tenants</a></li>
    <li class="breadcrumb-item"><a href="/Attachment/GetAllByTenantID/@ViewBag.Vrf.TenantID">Attachments</a></li>
    @if (!string.IsNullOrEmpty(Context.Request.Query["vifID"]))
    {
        <li class="breadcrumb-item"><a href="/Vif/GetAllByAttachmentID/@Context.Request.Query["attachmentID"]">VIFs</a></li>
    }
    <li class="breadcrumb-item"><a href="/BgpPeer/GetAllByVrfID/@ViewBag.Vrf.VrfID">BGP Peers</a></li>
    <li class="breadcrumb-item active">Create</li>
</ol>

<h2>Create BGP Peer for VRF '@ViewBag.Vrf.Name'</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="VrfID" value="@ViewBag.Vrf.VrfID" />
       
        <div class="form-group">
            <label asp-for="IpAddress" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IpAddress" class="form-control" />
                <span asp-validation-for="IpAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AutonomousSystem" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AutonomousSystem" class="form-control" />
                <span asp-validation-for="AutonomousSystem" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaximumRoutes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaximumRoutes" class="form-control" />
                <span asp-validation-for="MaximumRoutes" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsBfdEnabled" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IsBfdEnabled" class="checkbox" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" 
                       asp-route-attachmentID="@Context.Request.Query["attachmentID"]" 
                       asp-route-vifID="@Context.Request.Query["vifID"]" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<div>
    @if (!string.IsNullOrEmpty(Context.Request.Query["vifID"]))
    {
    <a asp-action="GetAllByVrfID" asp-controller="BgpPeer" asp-route-id="@ViewBag.Vrf.VrfID" 
       asp-route-tenantID="@Context.Request.Query["tenantID"]"
       asp-route-attachmentID="@Context.Request.Query["attachmentID"]" 
       asp-route-vifID = "@Context.Request.Query["vifID"]">Back to BGP Peers List</a>
    }
    else
    {
    <a asp-action="GetAllByVrfID" asp-controller="BgpPeer" asp-route-id="@ViewBag.Vrf.VrfID" asp-route-tenantID="@Context.Request.Query["tenantID"]">Back to BGP Peers List</a>
    }
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
