@model SCM.Models.ViewModels.BgpPeerViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

@if (@ViewData["ConcurrencyErrorMessage"] != null)
{
<div class="alert alert-danger">@ViewData["ConcurrencyErrorMessage"]</div>
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IpAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IpAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AutonomousSystem)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AutonomousSystem)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Vrf)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Vrf.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.MaximumRoutes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MaximumRoutes)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VrfID" />
        <input type="hidden" asp-for="BgpPeerID" />
        <input type="hidden" asp-for="RowVersion" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
             @if (ViewContext.HttpContext.Request.Query["tenantContext"] == "True")
             {
                <a asp-action="GetAllByVrfID" asp-controller="BgpPeer" asp-route-id="@ViewBag.Vrf.VrfID" asp-route-tenantContext="True">Back to BGP Peers List</a>
             }
             else if (ViewContext.HttpContext.Request.Query["deviceContext"] == "True")
             {
                <a asp-action="GetAllByVrfIDD" asp-controller="BgpPeer" asp-route-id="@ViewBag.Vrf.VrfID" asp-route-deviceContext="True">Back to BGP Peers List</a>
             }
        </div>
    </form>
</div>
